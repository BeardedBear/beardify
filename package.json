{
  "name": "beardify",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite",
    "lint": "vue-tsc --noEmit && eslint src/**/*.{vue,ts} && prettier --c ./src/**/*.{ts,vue,json} && stylelint ./src/**/*.{vue,scss}",
    "build": "npm run lint && vite build",
    "fix": "prettier --write ./src/**/*.{ts,vue,json} && eslint src/**/*.{vue,ts} --fix && stylelint ./src/**/*.{vue,scss} --fix",
    "preview": "npm run build && vite preview",
    "lint:commit": "vue-tsc --noEmit",
    "pre-commit": "npm run lint:commit"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "form-urlencoded": "^6.1.5",
    "ky": "^1.8.1",
    "normalize-diacritics": "^4.0.3",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.2.0",
    "pkce-challenge": "^5.0.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "vue-slicksort": "^2.0.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.11.0",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vueuse/core": "^13.1.0",
    "eslint": "^9.26.0",
    "eslint-plugin-perfectionist": "^4.12.3",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.1.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.32",
    "postcss-html": "^1.8.0",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "stylelint": "^16.19.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.11.1",
    "typescript": "5.8.3",
    "vite": "^6.3.4",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.10"
  }
}
